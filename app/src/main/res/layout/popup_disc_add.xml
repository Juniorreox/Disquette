<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_disque_add"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/black"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_disque_control_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_gravity="center"

        >


        <!-- Revoir la presentation du contenu -->


        <ImageView
            android:id="@+id/add_disc"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/validate"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/disquettes"
            app:layout_constraintVertical_bias="0.744"
            android:contentDescription="@string/send_the_disc" />

        <EditText
            android:id="@+id/disquettes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textLongMessage|textMultiLine"
            android:hint="@string/contenu_disque_input"
            android:padding="10dp"
            android:autofillHints=""
            android:textColor="@color/text_color"
            android:textColorHint="@color/menu_color"
            android:background="@drawable/et_style"
            android:textAlignment="center"
            android:maxLength="500"



            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.38"
             />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
