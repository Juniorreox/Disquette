<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Disquette" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Les lignes suivantes changent la couleur de la barre de statut et celle de la barre de navigation -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/background_color_opacity</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/launching</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="default_night_font" >
        <item name="android:textColor"> @color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/night</item>
     </style>

    <style name="night_font_large" parent="default_night_font" >
        <item name="android:textSize">24sp</item>
    </style>

</resources>